extends ./layout.pug

block stylesheet
  link(rel="stylesheet" href="/auth.css")

block content
  - const btnVal = isSignUp ? "Sign-up" : "Sign-in";
  - const subAct = isSignUp ? "/sign-up" : "/sign-in";
  form.input-container(action=submitAction, method="post")
    if isSignUp
      input.input-text(type="text", name="name", placeholder="이름을 입력하세요 : )", autocomplete="off")
    input.input-text(type="email", name="email", placeholder="이메일주소를 입력하세요 : )", autocomplete="off")
    input.input-text(type="password", name="password", placeholder="비밀번호를 입력하세요 : )", autocomplete="off")
    input.submit-btn(type="submit", value=btnVal)
